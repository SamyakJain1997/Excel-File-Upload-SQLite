<script>
    $(document).ready(function () {
        $('#example').DataTable({
            // dom: 'Bfrtip',
            // deferRender: true,
            scrollY: 750,
            scrollCollapse: true,
            // scroller: true,
            // scrollX: true,
            select: {
                style: 'multi'
            },
            buttons: [
                'copy',
                'csv',
                'excel',
                'pdf',
                {
                    extend: 'print',
                    text: 'Print Selected',
                    exportOptions: {
                        modifier: {
                            selected: {
                                style: 'multi'
                            },
                        }
                    }
                }
            ],
            select: true
        });
    });
    const myJSON1 = JSON.parse({{ data | tojson}});
    for (var i = 0; i < myJSON1.length; i++) {
        var row = `<tr onclick='checkuncheck(this)'>
                    <td onclick='checkuncheck(this)'><input type="checkbox" id="${i}""></td>
                    <td onclick='checkuncheck(this)'><label for="${i}">${(myJSON1[i]['Vertical'])}</label></td>
                    <td onclick='checkuncheck(this)'><label for="${i}">${(myJSON1[i]['Scope'])}</label></td>
                    <td onclick='checkuncheck(this)'><label for="${i}">${(myJSON1[i]['Objective'])}</label></td>
                    <td onclick='checkuncheck(this)'><label for="${i}">${(myJSON1[i]['Risk'])}</label></td>
                    <td onclick='checkuncheck(this)'><label for="${i}">${(myJSON1[i]['Control'])}</label></td>
                    <td onclick='checkuncheck(this)'><label for="${i}">${(myJSON1[i]['Test'])}</label></td>
                  </tr>`
        document.getElementById("myTable").innerHTML += row;
    }

    function checkuncheck(e) {
        var table = document.getElementById("myTable"), rIndex, cIndex;
        for (var i = 0; i < table.rows.length; i++) {
            for (var j = 0; j < table.rows[i].cells.length; j++) {
                table.rows[i].cells[j].onclick = function () {
                    rIndex = this.parentElement.rowIndex;
                    cIndex = this.cellIndex + 1;
                    var checkbox = document.getElementById(this.parentElement.rowIndex - 1);
                    // console.log(checkbox)
                    if (checkbox.checked) {
                        checkbox.checked = false;
                    }
                    else {
                        checkbox.checked = true;
                    }
                    // console.log("Row : " + rIndex + " , Cell : " + cIndex);
                };
            }
        }
    }


</script>